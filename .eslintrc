{
  "extends": ["standard", "standard-react", "prettier"],
  "rules": {
    "camelcase": 0,
    "handle-callback-err": 1,
    "import/first": 0,
    "react/jsx-indent": 0,
    "react/jsx-indent-props": 0,
    "react/jsx-uses-vars": 2,
    "react/jsx-uses-react": 2,
    "react/jsx-boolean-value": 0,
    "react/no-unused-prop-types": 0,
    "react/prop-types": 0,
    "no-class-assign": 1,
    "no-unmodified-loop-condition": 1,
    "no-unused-vars": 1,
    "no-unreachable": 1,
    "no-useless-constructor": 1,
    "no-useless-escape": 1,
    "no-useless-return": 1,
    "one-var": 0,
    "spaced-comment": 0,
    "standard/computed-property-even-spacing": 0,
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "es6": true
  },
  "plugins": ["react", "import", "prettier"],
  "settings": {
    "import/resolve": {
      "moduleDirectory": ["node_modules", "src"]
    }
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "__OSAPI__": true,
    "__OSSOCKETAPI__": true,
    "__ROBOTS__": true,
    "__FBAPPID__": true,
    "__STRIPEKEY__": true,
    "__DEVELOPMENT__": true,
    "__CLIENT__": true,
    "__SERVER__": true,
    "__DISABLE_SSR__": true,
    "__DEVTOOLS__": true,
    "__DLLS__": true,
    "__MODE__": true,
    "socket": true,
    "webpackIsomorphicTools": true,
    "jest": true,
    "google": true
  }
}
